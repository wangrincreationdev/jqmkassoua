<div class="ui-content">

  <h2>Se Connecter</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, placeholder: "Entrer l'adresse de courriel", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Entrer le mot de passe", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me, class: "form-control" %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions form-group">
    <%= f.submit "Se connecter", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
