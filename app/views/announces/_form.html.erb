

  <div class="ui-content">
    <%= form_for(announce, html: { multipart: true, 'data-ajax': false }) do |f| %>
  <% if announce.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(announce.errors.count, "error") %> prohibited this announce from being saved:</h2>

      <ul>
      <% announce.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nom %>
    <%= f.text_field :nom %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 20 %>
  </div>

  <div class="field">
    <%= f.label :prix %>
    <%= f.number_field :prix %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

  </div>

  <script type="text/javascript">
    $('#announce_image').bind('change', function() {
      size_in_megabytes = this.files[0].size/1024/1024;
      if(size_in_megabytes > 5) {
        alert('maximum taille du fichier est de 5MB. Choisir un fichier plus petit');
      }
    });
  </script>

