




<div class="ui-content">
  <div class="center">
    <ul data-role="listview">
        <% @announces.each do |announce| %>
          <li data-icon="false">
            <%= link_to(announce) do %>
              <div class="ui-grid-b">
                <div class="ui-block-a">
                  <%= image_tag announce.image.url() %>
                </div>
                <div class="ui-block-b">

                </div>
                <div class="ui-block-c">
                  <h4><%= announce.nom %></h4>
                  <p><%= number_to_currency(announce.prix) %></p>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
  </div>
      <br />
      <%= link_to 'Ajouter annonce', new_announce_path %>

</div>





